{
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": "warn",
    "no-use-before-define": "warn",
    "spaced-comment": "warn"
  },
  "extends": [
    "standard",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "plugins": [
    "jest"
  ]
}
